{% extends "base.html.twig" %}

{% block title %}Rename{% endblock %}

{% block content %}
    <h5 class="text-center mt-5">Rename</h5>
    <form class="mt-5" action="{{ path('rename', {id: id}) }}" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" id="name" class="form-control" name="name" value="{{ data['domain'] }}">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="{{ path('servers') }}" class="btn btn-primary">Back</a>
    </form>
{% endblock %}